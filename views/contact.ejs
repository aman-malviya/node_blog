<%- include("partials/header") -%>

<section class="contact">
    <div class="contact-title">
        <div class="contact-heading">
            <hr>
            <p>Contact Me</p>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 contact-details">
            <i class="fas fa-university"></i>
            <p>Address</p>
            <h6>NIT Bhopal, Madhya Pradesh, India</h6>
        </div>
        <div class="col-lg-4 contact-details">
            <i style="color: #000;" class="fab fa-linkedin-in"></i>
            <p>Connect on LinkedIn</p>
            <a href="https://www.linkedin.com/in/amanmalviya14/" style="text-decoration: underline;color: #000;"><h6>amanmalviya14</h6></a>
        </div>
        <div class="col-lg-4 contact-details">
            <i class="far fa-envelope"></i>
            <p>Email Address</p>
            <h6>amanmalv09@gmail.com</h6>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-5 contact-img">
            <img src="Assets/mob4.png" alt="">
        </div>
        <div class="col-lg-7 contact-panel">
            <form class="contact-form" action="/contact" method="POST">
                <div class="contact-title">
                    <div class="contact-heading">
                        <hr>
                        <p>Drop a message</p>
                        <hr>
                    </div>
                </div>
                <div class="form-group">
                    <input name="clientName" class="form-control" type="text" placeholder="Enter Your Name" required>
                </div>
                <div class="form-group">
                    <input name="clientEmail" class="form-control" type="email" placeholder="Enter Your Email Address"
                        required>
                </div>
                <div class="form-group">
                    <input name="subject" class="form-control" type="text" placeholder="Your Subject" required>
                </div>

                <div class="form-group">
                    <textarea required class="form-control" placeholder="Enter Your Message" name="clientMessage" id=""
                        cols="" rows="6"></textarea>
                </div>
                <button class="contact-form-button">Send A Message</button>
            </form>
        </div>

    </div>
</section>

<%- include("partials/footer") -%>